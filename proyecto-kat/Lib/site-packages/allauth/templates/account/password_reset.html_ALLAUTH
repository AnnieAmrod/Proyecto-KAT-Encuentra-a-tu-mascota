{% extends "account/base.html" %}

{% load i18n %}
{% load account %}
{% load static %}

{% block head_title %}{% trans "Password Reset" %}{% endblock %}

{% block content %}

<div class="container-fluid py-5">
    <div class="row d-flex align-items-start">
        <div class="col-md-6 text-center d-flex flex-column">
            <h1 class="display-3 pb-5">{% trans "Password Reset" %}</h1>
            {% if user.is_authenticated %}
                {% include "account/snippets/already_logged_in.html" %}
            {% endif %}

            <div class="d-flex flex-column align-items-center justify-content-center">
                <p class="py-3">{% trans "Forgotten your password? Enter your e-mail address below, and we'll send you an e-mail allowing you to reset it." %}</p>

                <form method="POST" action="{% url 'account_reset_password' %}" class="password_reset">
                    {% csrf_token %}
                    {{ form.as_p }}
                    <input class="btn-allauth" type="submit" value="{% trans 'Reset My Password' %}" />
                </form>

                <p class="pt-3">{% blocktrans %}Please contact us if you have any trouble resetting your password.{% endblocktrans %}</p>
            </div>
        </div>
        <div class="col-md-6">
            <img src="{% static 'presentaciÃ³n.jpg' %}" alt="Imagen de Keanu" class="img-fluid w-50">
        </div>
    </div>
</div>
{% endblock %}
